# Variables de entorno para el proyecto RefZone
# Copia este archivo como .env y completa con tus valores reales

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/refzone

# Sesiones
SESSION_SECRET=your-super-secret-session-key

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (para notificaciones)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Entorno
NODE_ENV=production
FRONTEND_URL=https://ref-zone.vercel.app

# Puerto (para desarrollo local)
PORT=5000
