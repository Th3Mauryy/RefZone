{
  "version": 2,
  "builds": [
    {
      "src": "mi-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "mi-backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "mi-backend/api/index.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "dest": "mi-frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "mi-frontend/index.html"
    }
  ]
}
