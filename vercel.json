{
  "version": 2,
  "name": "refzone",
  "builds": [
    {
      "src": "mi-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "mi-backend/server.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs22.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "mi-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "mi-frontend/dist/$1"
    }
  ]
}
