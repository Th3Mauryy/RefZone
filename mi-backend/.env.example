# Copia este archivo como .env y completa con tus valores reales
# Base de datos MongoDB
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/refzone

# Claves secretas - GENERAR NUEVAS PARA PRODUCCIÓN
JWT_SECRET=tu-jwt-secreto-super-seguro-aqui
BCRYPT_SECRET=tu-bcrypt-secreto-aqui
SESSION_SECRET=tu-session-secreto-aqui

# Cloudinary - Obtener de tu dashboard de Cloudinary
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret

# Email configuration - Configurar Gmail App Password
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password-de-gmail

# URLs - Cambiar en producción
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Usuario organizador por defecto (solo para desarrollo)
DEFAULT_ORGANIZER_EMAIL=organizador@example.com
DEFAULT_ORGANIZER_PASSWORD=cambiar-password-seguro

# Puerto del servidor
PORT=5000

# Entorno
NODE_ENV=development
